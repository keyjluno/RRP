<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RRP" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">#FF0000</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#000000</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="android:statusBarColor">#000000</item>
        <item name="android:navigationBarColor">#000000</item>
        <item name="android:windowBackground">#000000</item>
        <item name="android:colorBackground">#000000</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.RRP" parent="Base.Theme.RRP" />

    <!-- Splash screen theme с черным фоном -->
    <style name="Theme.RRP.SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">#000000</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>